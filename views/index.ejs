<%- include('header'); -%>

<style>
    .sale-tag {
    position: absolute;
    top: 0;
    left: 0;
    background-color: red; /* Background color of the tag */
    color: white;
    font-weight: bold;
    padding: 10px;
    transform: rotate(-15deg); /* Rotates the tag */
    transform-origin: top left; /* Rotates from the top-left corner */
    font-size: 16px;
    z-index: 1;
    white-space: nowrap;
    }
</style>

<main>
    <!-- Home Section -->
    <section id="home" class="p-5 text-center bg-light">
        <div class="container">
            <h1>Welcome to <strong>J</strong>AYS <strong>A</strong>UTO</h1>
            <p>Your trusted partner for buying and selling vehicles.</p>
        </div>
    </section>

    <!-- Vehicles Section -->
    <section id="vehicles" class="p-5">
        <div class="container">
            <h2>Vehicles in Sale</h2>
            <div class="row">
                <span class="text-end"><a href="vehicles">More</a></span>
                <!-- Vehicle 1 -->
                <% vehicles.forEach(vehicle => { %>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="sale-tag">LATEST ON SALE</div>
                        <img src="<%= vehicle.image %>" class="card-img-top img-fluid" alt="Car 1">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><strong><%= vehicle.brand %></strong> - <%= vehicle.name %></h5>
                            <p class="card-text flex-grow-1"><%= vehicle.description %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="p-5 bg-light">
        <div class="container">
            <h2>Our Services</h2>
            <p>At JAY's AUTO, we offer a variety of services to meet all your automotive needs. Whether you need routine maintenance, repairs, or just a wash to keep your vehicle looking its best, we’ve got you covered.</p>
            <div class="row">   
                <span class="text-end"><a href="services">More</a></span>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="images/system/Engine-Repair.jpg" class="card-img-top img-fluid" alt="Repair Service">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Vehicle Repair</h5>
                            <p class="card-text flex-grow-1">Our experienced technicians provide professional repair services to keep your vehicle running smoothly.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="images/system/wash.png" class="card-img-top img-fluid" alt="Body Wash">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Body Wash</h5>
                            <p class="card-text flex-grow-1">We offer high-quality body wash services to keep your vehicle clean and looking brand new.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="images/system/Oil-Change.png" class="card-img-top img-fluid" alt="Oil Change">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Oil Change</h5>
                            <p class="card-text flex-grow-1">Routine oil changes are essential for your car’s health. Our experts ensure a quick and efficient service.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
<section id="contact" class="p-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>Inquiries</h2>
                <div id="errorMessages" class="mt-3" style="display: none;">
                    <ul class="list-group" id="errorList"></ul>
                </div>
                <form class="contact-form" id="contactForm" action="/submit-form" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" >
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{10}" >
                    </div>
                    <div class="mb-3">
                        <label for="msg" class="form-label">Message</label>
                        <textarea class="form-control" id="msg" name="msg" rows="4" ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <div id="ServerSideErrors">
                    <% if (Array.isArray(errors) && errors.length > 0) { %>
                      <ul>
                        <% errors.forEach(function(error) { %>
                          <li style="color: red;"><%= error %></li>
                        <% }); %>
                      </ul>
                    <% } else { %>
                      <!-- <p>No errors found.</p> -->
                    <% } %>
                </div>
            </div>

            <!-- Hotlines Column (4 parts of the 12-column grid) -->
            <div class="col-md-4">
                <div class="contact-info">
                    <img src="images/system/serv.png" alt="Contact Us" class="contact-img img-fluid mb-3"/>
                    <h4>Hotlines</h4>
                    <p>Phone: (123) 456-7890</p>
                    <p>Phone: (987) 654-3210</p>
                    <h4>Email</h4>
                    <p>Email: contact@jaysauto.com</p>
                    <p>Support: support@jaysauto.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
</main>

<script src="js/inq_scripts.js"></script>

<%- include('footer'); -%>